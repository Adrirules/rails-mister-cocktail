<h1 class="text-center">List of cocktails</h1>
<div class="text-center padded">
</div>
<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-xs-6 col-md-3">
        <div class="card text-center">
          <ul class="list-inline card-link" >
            <li> <%= cl_image_tag cocktail.photo, height: 200, width: 200, crop: :fill %> <br> <%= link_to cocktail.name  , cocktail_path(cocktail)  %> </li>
          </ul>
        </div>
      </div>
    <% end %>
  <div class="row">
    <div class="col-xs-6 col-md-3">
      <p><%= link_to "Add a cocktail", new_cocktail_path, class: "btn btn-primary" %></p>
    </div>
  </div>
</div>
